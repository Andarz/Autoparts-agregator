{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "commitMessage",
            "type": "promptString",
            "description": "Введите сообщение коммита",
            "default": "Auto update"
        }
    ],
    "tasks": [
        {
            "label": "Git Push All",
            "type": "shell",
            "command": "git add . && git commit -m \"${input:commitMessage}\" && git push origin master",
            
            // --- ВОТ ЭТО ИСПРАВЛЯЕТ ОШИБКУ ---
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/d", "/c"]
                }
            },
            // ---------------------------------
            
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}